<?xml version="1.0" encoding="utf-8" ?>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModel"
             x:Class="MauiApp1.Views.TimerPage"
             Title="TimerPage">

    <ContentPage.BindingContext>
        <viewmodel:TimerViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
        <Label 
            Text="{Binding RemainingTime}"
            FontSize="48"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            x:Name="timerLabel"/>

        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
            <Button
                Text="Start"
                Command="{Binding StartCommand}"/>
            <Button
                Text="Stop"
                Command="{Binding StopCommand}"/>
            <Button
                Text="Reset"
                Command="{Binding ResetCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
